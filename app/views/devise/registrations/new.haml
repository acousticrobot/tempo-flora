%article.form

  %h2 Create a New Account

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    .form--field
      = f.email_field :email, autofocus: true, placeholder: "email address", class: "form--input"

    .form--field
      = f.text_field :username, autofocus: true, placeholder: "username", class: "form--input"

    .form--field
      = f.password_field :password, autocomplete: false, placeholder: "password", class: "form--input"

    - if @minimum_password_length
      .form--hint= "#{@minimum_password_length} characters minimum"

    .form--field
      = f.password_field :password_confirmation, autocomplete: false, placeholder: "confirm password", class: "form--input"
      .form--hint= "confirm your password"

    .form--actions
      = f.submit "Sign Up", class: "form--button"

    %aside.form--additional

      = render "devise/shared/links"
